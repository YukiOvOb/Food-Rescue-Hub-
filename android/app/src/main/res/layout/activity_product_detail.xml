<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background"
                android:contentDescription="Back"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#000000" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background"
                android:contentDescription="Share"
                android:src="@android:drawable/ic_menu_share"
                android:tint="#000000" />
        </RelativeLayout>

        <!-- Product Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Product Image"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_foreground" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Product Title -->
                <TextView
                    android:id="@+id/tvProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:textColor="#1A1A1A"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    tools:text="Bakery Mystery Box" />

                <!-- Store Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        tools:text="ðŸª Bhawna Bakery" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/dot_separator" />

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        tools:text="Bakery" />

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/dot_separator" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="2dp"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        tools:text="ðŸ“ 2.1 km" />
                </LinearLayout>

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1A1A1A"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        tools:text="$5.99" />

                    <TextView
                        android:id="@+id/tvSavingsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/savings_badge_background"
                        android:paddingStart="16dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="6dp"
                        android:textColor="#2E7D32"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Value $12+" />
                </LinearLayout>

                <!-- Details Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Pickup Window & Contents -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pickup Window:"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.05" />

                                <TextView
                                    android:id="@+id/tvPickupWindow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:text="7:00-9:00 PM" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contents:"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.05" />

                                <TextView
                                    android:id="@+id/tvContents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:text="3-5 items (bread &amp; pastries)" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Storage & Allergens -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Storage:"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.05" />

                                <TextView
                                    android:id="@+id/tvStorage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:text="Room temp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Allergens:"
                                    android:textColor="#999999"
                                    android:textSize="12sp"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.05" />

                                <TextView
                                    android:id="@+id/tvAllergens"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:text="gluten, dairy (may contain nuts)" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reliability Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Reliability"
                    android:textColor="#1A1A1A"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:background="@drawable/reliability_background"
                    android:padding="20dp">

                    <!-- Listing Accuracy -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜Š"
                            android:textSize="36sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Listing accuracy"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvListingAccuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#1A1A1A"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="96%" />
                    </LinearLayout>

                    <!-- On-time Pickup -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â°"
                            android:textSize="36sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="On-time pickup"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvOnTimePickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#1A1A1A"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="98%" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Buy Now Button -->
                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="#4CAF50"
                    android:text="Buy Now"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    android:elevation="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>