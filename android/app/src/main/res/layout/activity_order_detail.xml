<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="0dp"
            app:title="Order Details"
            app:titleTextColor="#1A1A1A"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#1A1A1A" />

        <!-- Main Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Order Status Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¦"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />
                </LinearLayout>

                <!-- Status Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Accepted -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#66BB6A">

                            <TextView
                                android:id="@+id/statusPaidIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="âœ“"
                                android:textSize="24sp"
                                android:textColor="@android:color/white"
                                android:gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accepted"
                            android:textSize="12sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Progress Line 1 -->
                    <View
                        android:id="@+id/progressLine1"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="#66BB6A"
                        android:layout_marginTop="-32dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <!-- Ready -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#66BB6A">

                            <TextView
                                android:id="@+id/statusReadyIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="âœ“"
                                android:textSize="24sp"
                                android:textColor="@android:color/white"
                                android:gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ready"
                            android:textSize="12sp"
                            android:textColor="#1A1A1A"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Progress Line 2 -->
                    <View
                        android:id="@+id/progressLine2"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0"
                        android:layout_marginTop="-32dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <!-- Collected -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#E0E0E0">

                            <TextView
                                android:id="@+id/statusCollectedIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="â—‹"
                                android:textSize="24sp"
                                android:textColor="#999999"
                                android:gravity="center" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Collected"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- ETA Warning -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/llEtaWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF3E0"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â±"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvEtaWarning"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ETA: Time left to pick up: 49 mins"
                            android:textSize="14sp"
                            android:textColor="#F57C00"
                            android:textStyle="bold"
                            tools:text="ETA: Time left to pick up: 49 mins" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp" />

                <!-- Map Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Store Location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- Store Info Overlay -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvStoreName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Store Location"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="#1A1A1A"
                                    tools:text="BreadTalk Orchard" />

                                <TextView
                                    android:id="@+id/tvStoreAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textSize="13sp"
                                    android:textColor="#666666"
                                    android:layout_marginTop="4dp"
                                    tools:text="313 Orchard Road, #B2-01" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Order Info -->
                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #1234A5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="8dp"
                    tools:text="Order #1234A5" />

                <TextView
                    android:id="@+id/tvPickupWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Window: 7:00-9:00 PM"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="24dp"
                    tools:text="Pickup Window: 7:00-9:00 PM" />

                <!-- Action Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewQrCode"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="View Pickup QR Code"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:backgroundTint="#66BB6A"
                    app:cornerRadius="28dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetDirections"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ—º Get directions"
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:backgroundTint="#F8F8F8"
                    app:cornerRadius="28dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="2dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReviewListing"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/review_listing_button"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:cornerRadius="28dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Order Items Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›ï¸"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order Items"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Order items will be added dynamically -->
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Amount"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25.50"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#66BB6A"
                        tools:text="$25.50" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>