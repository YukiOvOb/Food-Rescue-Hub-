<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Product Image - Circular like reference -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF">

        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Cart Item Image"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_foreground" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Item Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <!-- Item Title -->
        <TextView
            android:id="@+id/tvCartItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1A1A1A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Melting Cheese Pizza" />

        <!-- Store Name -->
        <TextView
            android:id="@+id/tvCartStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="Pizza Italiano" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvCartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#1A1A1A"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="$11.88" />

        <!-- Hidden Subtotal (required by adapter) -->
        <TextView
            android:id="@+id/tvCartSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Hidden Remove Button (required by adapter) -->
        <ImageButton
            android:id="@+id/btnRemoveItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="Remove Item" />
    </LinearLayout>

    <!-- Quantity Controls - Exactly like reference -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/cart_quantity_background">

        <!-- Decrease Button -->
        <ImageButton
            android:id="@+id/btnDecreaseQuantity"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Decrease"
            android:src="@android:drawable/ic_delete"
            android:tint="#FFFFFF"
            android:padding="8dp" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/tvCartQuantity"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="1" />

        <!-- Increase Button -->
        <ImageButton
            android:id="@+id/btnIncreaseQuantity"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Increase"
            android:src="@android:drawable/ic_input_add"
            android:tint="#FFFFFF"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>